{
  "name": "@gameflow-tv/flume",
  "version": "0.0.0-dev",
  "description": "React implementation of the Flume design system",
  "main": "dist/index.js",
  "files": [
    "dist",
    "bundle.scss"
  ],
  "types": "dist/index.d.ts",
  "repository": "git://github.com/gameflow-tv/flume.git",
  "author": "arne@gameflow.tv",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "scripts": {
    "format": "prettier --write \"./src/**/*.{ts,tsx,js,jsx,mdx,json}\" --config .prettierrc",
    "build:storybook": "build-storybook -o storybook-static",
    "serve:storybook": "start-storybook -p 9009 -s ./public",
    "prepare": "husky install",
    "test": "jest",
    "coverage": "jest --coverage",
    "chromatic": "npx chromatic",
    "build": "tsc && npm run build:bundle",
    "postbuild": "npm run bundle-styles",
    "bundle-styles": "scss-bundle -e src/styles/index.scss -o bundle.scss --rootDir src/styles",
    "watch": "tsc && npm run build:bundle -- --watch",
    "build:bundle": "tsup src/index.ts --dts --clean"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format"
    }
  },
  "sideEffects": [
    "**/*.css"
  ],
  "dependencies": {
    "chroma-js": "^2.4.2"
  },
  "peerDependencies": {
    "react": "^18.1.0",
    "react-dom": "^18.1.0"
  },
  "devDependencies": {
    "@mdx-js/loader": "^2.1.1",
    "@mdx-js/mdx": "^2.1.1",
    "@mdx-js/react": "^2.1.1",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.3.2",
    "@storybook/addon-a11y": "^6.5.0-beta.8",
    "@storybook/addon-backgrounds": "^6.5.0-beta.8",
    "@storybook/addon-console": "^1.2.3",
    "@storybook/addon-controls": "^6.5.0-beta.8",
    "@storybook/addon-docs": "^6.5.0-beta.8",
    "@storybook/addon-essentials": "^6.5.0-beta.8",
    "@storybook/addon-knobs": "^6.4.0",
    "@storybook/addon-storysource": "^6.5.0-beta.8",
    "@storybook/addons": "^6.5.0-beta.8",
    "@storybook/builder-webpack5": "^6.5.0-beta.8",
    "@storybook/manager-webpack5": "^6.5.0-beta.8",
    "@storybook/mdx2-csf": "^0.0.3",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^6.5.0-beta.8",
    "@storybook/theming": "^6.5.0-beta.8",
    "@types/chroma-js": "^2.1.3",
    "@types/jest": "^27.5.1",
    "@types/jsdom": "^16.2.14",
    "@types/node": "17.0.33",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.4",
    "@types/rollup-plugin-peer-deps-external": "^2.2.1",
    "@types/styled-components": "^5.1.25",
    "acorn-jsx": "^5.3.2",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.2.5",
    "chroma-js": "^2.4.2",
    "chromatic": "^6.5.4",
    "css-loader": "^6.7.1",
    "eslint-plugin-mdx": "^1.17.0",
    "eslint-plugin-react": "^7.29.4",
    "husky": "^8.0.1",
    "jest": "^27.5.1",
    "jsdom": "^19.0.0",
    "loader-utils": "^3.2.0",
    "mocha": "^10.0.0",
    "prettier": "^2.6.2",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "rollup": "^2.72.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "sass": "^1.51.0",
    "sass-loader": "^12.6.0",
    "scss-bundle": "^3.1.2",
    "storybook": "^6.5.0-beta.8",
    "styled-components": "^5.3.5",
    "ts-jest": "^27.1.4",
    "tsup": "^5.12.7",
    "typescript": "^4.6.4",
    "webpack": "5.72.1"
  },
  "engines": {
    "node": ">=16"
  }
}
