{
  "name": "@gameflow-tv/flume",
  "version": "0.0.0-dev",
  "description": "React implementation of the Flume design system",
  "module": "dist/index.js",
  "files": [
    "dist"
  ],
  "types": "dist/index.d.ts",
  "repository": "git://github.com/gameflow-tv/flume.git",
  "author": "arne@gameflow.tv",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "scripts": {
    "format": "prettier --write \"./src/**/*.{ts,tsx,js,jsx,mdx,json}\" --config .prettierrc",
    "build:storybook": "build-storybook -o storybook-static",
    "serve:storybook": "start-storybook -p 9009 -s ./public",
    "prepare": "husky install",
    "test": "jest",
    "coverage": "jest --coverage",
    "chromatic": "npx chromatic",
    "build": "tsc && yarn build:stylesheet && rollup -c",
    "watch": "concurrently \"tsc && rollup -cw\" \"yarn watch:stylesheet\"",
    "watch:stylesheet": "sass --watch src/styles/index.scss bundle.css",
    "build:stylesheet": "sass src/styles/index.scss bundle.css"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn format"
    }
  },
  "sideEffects": [
    "**/*.css"
  ],
  "resolutions": {
    "react-dev-utils": "^11.0.4",
    "remark-parse": "^9.0.0",
    "browserslist": "^4.19.1",
    "glob-parent": "^5.1.2"
  },
  "peerDependencies": {
    "chroma-js": "^2.4.2",
    "lodash": "^4.17.21",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "styled-components": "^5.3.3"
  },
  "devDependencies": {
    "@mdx-js/loader": "^2.0.0",
    "@mdx-js/mdx": "^2.0.0",
    "@mdx-js/react": "^2.0.0",
    "@rollup/plugin-commonjs": "^21.0.2",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.3.1",
    "@storybook/addon-a11y": "^6.5.0-alpha.44",
    "@storybook/addon-backgrounds": "^6.5.0-alpha.44",
    "@storybook/addon-console": "^1.2.3",
    "@storybook/addon-controls": "^6.5.0-alpha.44",
    "@storybook/addon-docs": "^6.5.0-alpha.44",
    "@storybook/addon-essentials": "^6.5.0-alpha.44",
    "@storybook/addon-knobs": "^6.4.0",
    "@storybook/addon-storysource": "^6.5.0-alpha.44",
    "@storybook/addons": "^6.5.0-alpha.44",
    "@storybook/builder-webpack5": "^6.5.0-alpha.44",
    "@storybook/manager-webpack5": "^6.4.19",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^6.5.0-alpha.44",
    "@storybook/theming": "^6.5.0-alpha.44",
    "@types/chroma-js": "^2.1.3",
    "@types/jest": "^27.4.1",
    "@types/jsdom": "^16.2.14",
    "@types/lodash": "^4.14.179",
    "@types/node": "17.0.21",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@types/rollup-plugin-peer-deps-external": "^2.2.1",
    "@types/styled-components": "^5.1.23",
    "acorn-jsx": "^5.3.2",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.2.3",
    "chroma-js": "^2.4.2",
    "chromatic": "^6.5.1",
    "concurrently": "^7.0.0",
    "css-loader": "^6.6.0",
    "eslint-plugin-mdx": "^1.16.0",
    "eslint-plugin-react": "^7.29.2",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jsdom": "^19.0.0",
    "lodash": "^4.17.21",
    "mocha": "^9.2.1",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-docgen-typescript-loader": "^3.7.2",
    "react-dom": "^17.0.2",
    "rollup": "^2.68.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "sass": "^1.49.9",
    "storybook": "^6.5.0-alpha.44",
    "styled-components": "^5.3.3",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5",
    "webpack": "5.69.1"
  }
}
