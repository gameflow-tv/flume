{
  "name": "@gameflow-tv/flume",
  "version": "2.0.0",
  "description": "Web implementation of the Flume design system",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./foundation": "./dist/foundation.js",
    "./react": "./dist/react.js",
    "./tailwind": "./dist/tailwind.js"
  },
  "files": [
    "dist",
    "**.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gameflow-tv/flume.git"
  },
  "author": "Gameflow",
  "license": "UNLICENSED",
  "prettier": "@gameflow-tv/prettier-config",
  "bugs": {
    "url": "https://github.com/gameflow-tv/flume/issues"
  },
  "homepage": "https://github.com/gameflow-tv/flume#readme",
  "scripts": {
    "build": "tsc --build --clean && tsup",
    "format": "prettier --write \"./**/*.{ts,tsx,js,jsx,json}\"",
    "format:ci": "prettier \"./**/*.{ts,tsx,js,jsx,json}\" --check",
    "lint": "eslint --fix --cache --ext .js,.jsx,.ts,.tsx,.mdx ./src",
    "lint:ci": "eslint --ext .js,.jsx,.ts,.tsx,.mdx ./src",
    "watch": "npm run build -- --watch",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:ci": "npm test -- --ci"
  },
  "devDependencies": {
    "@gameflow-tv/eslint-config": "^0.0.8",
    "@gameflow-tv/prettier-config": "^0.2.1",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.0.6",
    "@types/react": "^18.0.15",
    "eslint": "^8.20.0",
    "jest": "^28.1.3",
    "prettier": "2.7.1",
    "tailwindcss": "^3.1.6",
    "ts-jest": "^28.0.7",
    "tsup": "^6.1.3",
    "typescript": "^4.7.4"
  },
  "optionalDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "engines": {
    "node": ">=12"
  },
  "dependencies": {
    "@gameflow-tv/ambiance": "^1.0.0"
  }
}
